= render partial: 'shared/flash_notifications'

%h1 Profile

.row
  .col-md-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %strong General Info
      .panel-body
        .form-group
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-user
            = text_field_tag :email, @user.email, class: 'form-control', disabled: true
  .col-md-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %strong Update password
      .panel-body
        = render partial: 'shared/error_messages', locals: {object: @user}
        = form_for @user, url: profile_path do |f|
          .form-group
            .input-group
              %span.input-group-addon
                %i.glyphicon.glyphicon-lock
              = f.password_field :password, class: 'form-control', placeholder: 'Password'
          .form-group
            .input-group
              %span.input-group-addon
                %i.glyphicon.glyphicon-lock
              = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation'
          = f.submit 'Update password', class: 'btn btn-default'
