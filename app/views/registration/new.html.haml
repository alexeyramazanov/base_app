.panel.panel-default.panel-authentication
  .panel-heading
    %h3.panel-title
      %strong Registration
  .panel-body
    = render partial: 'shared/error_messages', locals: {object: @user}
    = form_for @user, url: registration_path do |f|
      .form-group
        .input-group
          %span.input-group-addon
            %i.glyphicon.glyphicon-user
          = f.text_field :email, class: 'form-control', placeholder: 'Email'
      .form-group
        .input-group
          %span.input-group-addon
            %i.glyphicon.glyphicon-lock
          = f.password_field :password, class: 'form-control', placeholder: 'Password'
      .form-group
        .input-group
          %span.input-group-addon
            %i.glyphicon.glyphicon-lock
          = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation'
      = f.submit 'Register', class: 'btn btn-default'
    %hr
    .text-center
      = link_to 'log in', login_path
      |
      = link_to 'restore password', reset_password_path
