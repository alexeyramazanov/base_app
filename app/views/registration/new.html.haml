.card.card-authentication
  .card-header
    Registration
  .card-body
    = render partial: 'shared/error_messages', locals: {object: @user}
    = form_for @user, url: registration_path do |f|
      .form-group
        .input-group
          .input-group-prepend
            .input-group-text
              %i.fas.fa-user
          = f.text_field :email, class: 'form-control', placeholder: 'Email'
      .form-group
        .input-group
          .input-group-prepend
            .input-group-text
              %i.fas.fa-key
          = f.password_field :password, class: 'form-control', placeholder: 'Password'
      .form-group
        .input-group
          .input-group-prepend
            .input-group-text
              %i.fas.fa-key
          = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation'
      = f.submit 'Register', class: 'btn btn-primary'
    %hr
    .text-center
      = link_to 'log in', login_path
      |
      = link_to 'restore password', reset_password_path
